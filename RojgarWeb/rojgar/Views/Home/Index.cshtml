@using Microsoft.Extensions.Configuration;
@inject IConfiguration config;

@{
    Layout = null;
    string AppTitle = config.GetValue<string>("Title");
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login - @AppTitle</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/assets/css/AdminLTE.css" rel="stylesheet" />
    <link href="~/assets/css/allskin.css" rel="stylesheet" />
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container d-flex m-auto home-login-box">
        <div class="card col-lg-4 m-auto shadow">
            <div class="m-auto pt-2">
                <h3>Dashboard Login</h3>
            </div>
            <div class="card-body m-auto">
                <form method="post">
                    <div class="input-group mb-3">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" name="username" class="form-control input_user" value="" placeholder="Username" required>
                    </div>
                    <div class="input-group mb-2">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" name="password" class="form-control input_pass" value="" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" name="rememberMe" value="true" class="custom-control-input" id="customControlInline">
                            <label class="custom-checkbox" for="customControlInline">Remember me</label>
                        </div>
                    </div>
                    <div asp-validation-summary="All" class="text-danger font-weight-bold"></div>
                    <div class="d-flex justify-content-center mt-3 login_container">
                        <button type="submit" class="btn btn-sm btn-primary">Login</button>
                        <button type="reset" class="btn btn-sm btn-danger ml-2">Reset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <footer class="home-footer-box">
        <a asp-controller="Home" asp-action="Index">Home</a><span class="mobile-hidden"> | </span>
        <a asp-controller="Home" asp-action="AboutUs">About Us</a><span class="mobile-hidden"> | </span>
        <a asp-controller="Home" asp-action="ContactUs">Contact Us</a><span class="mobile-hidden"> | </span>
        <a asp-controller="Home" asp-action="PrivacyPolicy">Privacy Policy</a><span class="mobile-hidden"> | </span>
        <a asp-controller="Home" asp-action="TermsAndConditions">Terms & Conditions</a><span class="mobile-hidden"> | </span>
        <a asp-controller="Home" asp-action="RefundPolicy">Cancellation/Refund</a>
    </footer>
</body>
</html>
