
@{
    ViewData["Title"] = "Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="content-wrapper">
    <section class="content-header">
        <h1>Jobs</h1>
        <ol class="breadcrumb">
            <li><a href="index.html"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Jobs</li>
        </ol>
    </section>
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <div class="box-title">
                            <div class="row">
                                <div asp-validation-summary="All" class="text-danger"></div>                              
                            </div>
                        </div>
                        <table id="example1" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        UserName
                                    </th>
                                    <th>
                                       Added On
                                    </th>
                               
                                    <th>Service</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewData.Model != null)
                                {


                                @foreach (var item in (IEnumerable<ServiceNotification>) ViewData.Model)
                                {
                                <tr>
                                    <td>
                                        @item.User

                                    </td>
                                  
                                    <td>
                                        @item.TimeStamp
                                    </td>
                                  
                                    <td>
                                        @item.Services
                                    </td>
                             
                                    @*<td>
                                        <a asp-action="EditJob" asp-route-id="@item.JobId">Edit</a> |
                                        <a asp-action="JobDetail" asp-route-id="@item.JobId">Details</a> |
                                        @if (item.IsActive)
                                        {
                                            <a asp-action="EnableDisableJob" asp-route-id="@item.JobId">Disable</a>
                                        }
                                        else
                                        {
                                            <a asp-action="EnableDisableJob" asp-route-id="@item.JobId">Enable</a>
                                        }
                                    </td>*@
                                    @*<td><a asp-action="JobPosts" asp-route-id="@item.JobId">Job Posts</a></td>*@
                                </tr>
                                }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>




@section Scripts{
    <script>
        highlightMenuItem("Manage", "Jobs");
    </script>
}